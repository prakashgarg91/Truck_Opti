# Enterprise TruckOpti Environment Configuration
# Copy to .env and configure for your environment

# Environment
ENVIRONMENT=development
DEBUG=false
TESTING=false

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_EXPIRES_IN=3600
PASSWORD_HASH_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# Database Configuration
DATABASE_URL=sqlite:///app/truck_opti.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis Configuration (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# API Configuration
API_VERSION=v1
RATE_LIMIT=100/hour
MAX_REQUEST_SIZE=16777216
API_TIMEOUT=30
CORS_ORIGINS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
STRUCTURED_LOGGING=true

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health
PROMETHEUS_PORT=9090

# External Services
FUEL_PRICE_API_KEY=
MAPS_API_KEY=
WEATHER_API_KEY=

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=truckopti-backups

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=truckopti-data

# Enterprise Features
ENABLE_AUDIT_LOG=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_SCANNING=true
BACKUP_RETENTION_DAYS=30

# LDAP/AD Integration (Optional)
LDAP_SERVER=
LDAP_BASE_DN=
LDAP_BIND_USER=
LDAP_BIND_PASSWORD=
ENABLE_LDAP_AUTH=false

# Email Configuration (Optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@truckopti.com

# Celery Configuration (Optional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Sentry Configuration (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_3D_VISUALIZATION=true
ENABLE_ROUTE_OPTIMIZATION=true
ENABLE_ML_OPTIMIZATION=true
ENABLE_BATCH_PROCESSING=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_CSV_EXPORT=true
ENABLE_API_DOCUMENTATION=true

# Performance Settings
MAX_WORKER_THREADS=4
ENABLE_REQUEST_CACHING=true
CACHE_TIMEOUT=300
ENABLE_DATABASE_CONNECTION_POOLING=true

# Development Settings (Development/Testing Only)
FLASK_DEBUG=false
FLASK_TESTING=false
DISABLE_AUTH=false
MOCK_EXTERNAL_SERVICES=false